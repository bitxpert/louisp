<div class = "col-md-offset-3 col-md-6 panel">
  
    <div class="panel-body signin-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group background">
          <%= f.label :user_main_id, "User ID", class: "align-label" %>
          <%= f.text_field :user_main_id, autofocus: true, class: "form-control signin-field" %>
        </div>
        <div class="form-group background">
          <%= f.label :password, class: "align-label" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control signin-field" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox hide">
            <label>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          </div>
          <% end %>
        <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary hide" %>
      <% end %>
    </div>
   
</div>
