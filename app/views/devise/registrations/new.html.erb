<%= bootstrap_devise_error_messages! %>
<div class="col-md-offset-3 col-md-6 panel">
    <div class="panel panel-default">
      
      <div class="panel-body signin-body col-md-6">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
          <div class="form-group background-signup">
            <%= f.label :first_name, class: "align-label" %>
            <%= f.text_field :first_name, class: "form-control signin-field" %>
          </div>
          <div class="form-group background-signup">
            <%= f.label :last_name, class: "align-label" %>
            <%= f.text_field :last_name, class: "form-control signin-field" %>
          </div>
          <div class="form-group background-signup">
            <%= f.label :country_of_residence, class: "align-label" %>
            <%= f.country_select :country_of_residence, priority: %w(US CA), prompt: 'Please select a country',class: "form-control drop_down_rltv_pos" %>
          </div>
          <div class="form-group background-signup">
            <%= f.label :email, class: "align-label" %>
            <%= f.email_field :email, class: "form-control signin-field" %>
          </div>
          <div class="form-group background-signup">
            <%= f.label :personal_phone, class: "align-label" %>
            <%= f.text_field :personal_phone, class: "form-control signin-field" %>
          </div>
          <% password_length = 12
          @password = Devise.friendly_token.first(password_length) %>
          <div class="form-group background-signup">
            <%= f.text_field :password, :value => @password, hidden: "hidden" %>
          </div>
          <div class="form-group background-signup">
            <%= f.text_field :password_confirmation, :value => @password, hidden: "hidden" %>
          </div>
          <div class="form-group background-signup">
            <%= hidden_field_tag "user_main_id", "nil" %>
          </div>
          
          <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
        <% end %>
      </div>
  </div>

</div>   
