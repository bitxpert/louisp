<%- model_class = Entertainment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to "Total EE's", new_entertainment_path, :class => 'btn col-md-6 btn-border'%>
<%= link_to "EE's By COUNTRY", new_entertainment_path, :class => 'btn col-md-6 btn-border'%>
<%= link_to "EE's By CATAGORY", new_entertainment_path, :class => 'btn col-md-6 btn-border'%>
<%= link_to "EE's By FUNCTION", new_entertainment_path, :class => 'btn col-md-6 btn-border'%>

<table id="entertainments" class="table table-striped edit" data-source="<%= entertainments_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= "EE "+model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:state_or_province) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_entertainment_path,
            :class => 'btn btn-primary btn btn_side' %>
