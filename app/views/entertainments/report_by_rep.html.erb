<div class="page-header">
  <h1>Report By Rep</h1>
</div>
<%- model_class = Entertainment -%>
<table id="flip-scroll" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:representative_id) %></th>
      <th class="numeric">Count</th>
    </tr>
  </thead>
  <tbody>
    <% @by.each do |entertainment| %> 
      <tr>
        <td data-title="Representative" class="numeric"><%= link_to entertainment,'/entertainments/report/1/'+entertainment+'/1/1', :class => 'undecorate'  %></td>
        <td data-title="Url" class="numeric"><%= @count[entertainment] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
